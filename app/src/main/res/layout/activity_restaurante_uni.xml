<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Restaurante_Uni">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250sp">

            <ImageView
                android:id="@+id/Img_Rest"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:background="@drawable/img_prueba" />

            <com.github.mmin18.widget.RealtimeBlurView
                android:id="@+id/blur_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeBlurRadius="0dp" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/SV_content_rest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200sp">

                    <ImageButton
                        android:id="@+id/btn_to_return"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="5sp"
                        android:background="@null"
                        android:src="@drawable/ic_baseline_chevron_left_24"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_ubication_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="20sp"
                        android:layout_marginBottom="15sp"
                        android:adjustViewBounds="false"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_baseline_location_on_24"/>

                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="40sp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20sp"
                        android:layout_marginBottom="15sp">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_launcher_background"/>

                        <TextView
                            android:id="@+id/location_Rest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Ubicacion de ejemplo"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pag_corners_shape"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginBottom="0sp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginBottom="0sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/Nombre_Rest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/coiny"
                                    android:gravity="center"
                                    android:text="Nombre_Rest"
                                    android:textColor="@color/black"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/info_Rest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Informacion del restaurante"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="20sp"
                            android:background="@drawable/bacg_card"
                            android:layout_marginBottom="0sp"
                            android:padding="20sp"
                            android:orientation="vertical"
                            android:gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Menus de la semana"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:paddingBottom="5sp"/>

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alignmentMode="alignMargins"
                                android:padding="14sp"
                                android:columnCount="3">

                                <Button
                                    android:layout_width="80sp"
                                    android:layout_height="40sp"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginEnd="10sp"
                                    android:layout_marginTop="10sp"
                                    android:backgroundTint="#F6F6F6"
                                    android:text="Miercoles"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"/>
                                <Button
                                    android:layout_width="80sp"
                                    android:layout_height="40sp"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginEnd="10sp"
                                    android:layout_marginTop="10sp"
                                    android:backgroundTint="#F6F6F6"
                                    android:text="Miercoles"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"/>
                                <Button
                                    android:layout_width="80sp"
                                    android:layout_height="40sp"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginEnd="10sp"
                                    android:layout_marginTop="10sp"
                                    android:backgroundTint="#F6F6F6"
                                    android:text="Miercoles"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"/>
                                <Button
                                    android:layout_width="80sp"
                                    android:layout_height="40sp"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginEnd="10sp"
                                    android:layout_marginTop="10sp"
                                    android:backgroundTint="#F6F6F6"
                                    android:text="Miercoles"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"/>
                                <Button
                                    android:layout_width="80sp"
                                    android:layout_height="40sp"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginEnd="10sp"
                                    android:layout_marginTop="10sp"
                                    android:backgroundTint="#F6F6F6"
                                    android:text="Miercoles"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"/>
                                <Button
                                    android:layout_width="80sp"
                                    android:layout_height="40sp"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginEnd="10sp"
                                    android:layout_marginTop="10sp"
                                    android:backgroundTint="#F6F6F6"
                                    android:text="Miercoles"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"/>

                            </GridLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="20sp"
                            android:layout_marginBottom="0sp"
                            android:background="@drawable/bacg_card"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Entradas"
                                android:gravity="center"
                                android:fontFamily="@font/coiny"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="100sp"
                                        android:layout_height="100sp"
                                        android:src="@drawable/ic_launcher_background" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/items_card_menu"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="10sp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="20sp"
                            android:layout_marginBottom="0sp"
                            android:background="@drawable/bacg_card"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Segundos"
                                android:gravity="center"
                                android:fontFamily="@font/coiny"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="100sp"
                                        android:layout_height="100sp"
                                        android:src="@drawable/ic_launcher_background" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Primera Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Segunda Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Tercera Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="20sp"
                            android:layout_marginBottom="0sp"
                            android:background="@drawable/bacg_card"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Postres"
                                android:gravity="center"
                                android:fontFamily="@font/coiny"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="100sp"
                                        android:layout_height="100sp"
                                        android:src="@drawable/ic_launcher_background" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Primera Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Segunda Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Tercera Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="20sp"
                            android:layout_marginBottom="0sp"
                            android:background="@drawable/bacg_card"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bebidas"
                                android:gravity="center"
                                android:fontFamily="@font/coiny"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="100sp"
                                        android:layout_height="100sp"
                                        android:src="@drawable/ic_launcher_background" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Primera Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Segunda Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/entr_corners_shape"
                                        android:gravity="center"
                                        android:padding="5sp"
                                        android:text="Tercera Entrada"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:layout_marginStart="50sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="50sp"
                            android:layout_marginBottom="20sp"
                            android:background="@drawable/bacg_card"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Precios"
                                android:gravity="center"
                                android:fontFamily="@font/coiny"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <GridLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:rowCount="3"
                                    android:columnCount="2">

                                    <TextView
                                        android:layout_width="150sp"
                                        android:layout_height="30sp"
                                        android:text="Precio Completo: "
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="150sp"
                                        android:layout_height="30sp"
                                        android:text=" S/0.00"
                                        android:gravity="center"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="150sp"
                                        android:layout_height="30sp"
                                        android:text="Solo Segundo: "
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="150sp"
                                        android:layout_height="30sp"
                                        android:text=" S/0.00"
                                        android:gravity="center"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="150sp"
                                        android:layout_height="30sp"
                                        android:text="Delivery: "
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="150sp"
                                        android:layout_height="30sp"
                                        android:text=" S/0.00"
                                        android:gravity="center"
                                        android:textStyle="bold"/>

                                </GridLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="300sp"
                        android:id="@+id/frame_layout"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:background="@drawable/ic_launcher_background"/>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>



    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>