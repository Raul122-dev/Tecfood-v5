<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120sp"
        app:cardCornerRadius="15sp"
        android:elevation="150sp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10sp">
            <TextView
                android:id="@+id/nombre_rest"
                android:layout_width="240sp"
                android:layout_height="wrap_content"
                android:text="Restaurante"
                android:textSize="30sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"/>
            <TextView
                android:id="@+id/ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion:Yanahuara"
                android:layout_below="@+id/nombre_rest"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:textSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificacion: 7/10"
                android:layout_below="@+id/ubicacion"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:textSize="15sp"
                android:textColor="#000"/>

            <ImageView
                android:id="@+id/restaurante_img"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:maxHeight="100sp"
                android:src="@drawable/ic_launcher_background"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>