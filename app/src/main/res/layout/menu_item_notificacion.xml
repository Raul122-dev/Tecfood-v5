<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bacg_card"
    android:layout_margin="10sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bacg_card">
        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/icon_notificacion"
            android:padding="10sp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/idTituloNotificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo de notificacion"
                    android:textSize="18sp"
                    android:textColor="@color/dorado"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/idDescripcionNotificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="descripcion de notificacion"
                    android:textSize="15sp"
                    android:textColor="@color/dorado">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="10sp">
                <TextView
                    android:id="@+id/fechaNotificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aa/mm"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/horaNotificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00 am"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>