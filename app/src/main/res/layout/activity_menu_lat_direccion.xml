<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ItemsMenuLateral.MenuDireccion.MenuLat_Direccion">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agrega o escoge una \n direccion"
            android:gravity="center"
            android:padding="8sp"
            android:textSize="22sp"
            android:layout_marginTop="35sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@color/elRealGrisGozu">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:background="@color/elRealGrisGozu" />

        <EditText
            android:id="@+id/lgCorreo"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:paddingLeft="45sp"
            android:background="@drawable/input_style_edit_text"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:hint="Ingresa una direccion de entrega" />

        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginTop="-41sp"
            android:layout_marginLeft="-125sp"
            android:src="@drawable/icon_search">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:padding="5sp"
                android:src="@drawable/icon_place"></ImageView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/grisCasiBlanco"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:text="Ubicacion Actual"
                android:textColor="@color/black"
                android:textSize="10sp"></Button>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaDirecciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonVolverMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flecha_volver_menu"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp">
    </ImageButton>
</RelativeLayout>