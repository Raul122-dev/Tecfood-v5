<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="370sp">

    <ImageView
        android:id="@+id/fondoBanerMenu"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@drawable/wallpaper1"/>

    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/headerMenuImg"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        app:realtimeBlurRadius="10dp"
        app:realtimeOverlayColor="#7000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_color="@color/principal"
                app:civ_border_width="2sp"
                app:civ_border_overlay="true" />

            <ImageButton
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginStart="-10sp"
                android:layout_marginTop="104sp"
                android:background="@null"
                android:src="@drawable/icon_btn_editar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="24dp"
                android:shadowColor="@color/dorado"
                android:shadowRadius="30"
                android:text="User"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/white"
                android:textFontWeight="1730"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:layout_marginBottom="14sp"
                android:shadowColor="@color/dorado"
                android:shadowRadius="20"
                android:text="informacion adicional"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white"
                android:textFontWeight="1000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">

            <ImageButton
                android:id="@+id/btnInviteFriends"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:background="@drawable/invite_friends_new"
                android:scaleType="fitXY" />
            <!--<Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Haste Premiun"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="17sp">
            </Button>-->
